    def do_GET(self):
        # å¤„ç†nginxä»£ç†è·¯å¾„
        if self.path == '/' or self.path == '/editor' or self.path.startswith('/editor'):
            self.serve_editor()
        elif self.path.startswith('/api/files'):
            self.list_files()
        elif self.path.startswith('/api/read/'):
            self.read_file()
        else:
            super().do_GET()
    
    def do_POST(self):
        if self.path.startswith('/api/save/'):
            self.save_file()
        else:
            self.send_error(404)
    

                "icon": "ğŸ”¬"
            },
            "ğŸ¨ UGFH è¯¾ç¨‹å†…å®¹": {
                "files": [],
                "patterns": ["content/ugfh/**/*.md"],
                "icon": "ğŸ¨"
            },
            "ğŸ—‚ï¸ æ‚é¡¹å†…å®¹": {
                "files": [],
                "patterns": ["content/mess/**/*.md"],
                "icon": "ğŸ—‚ï¸"
            },
            "ğŸ“‹ æ–‡æ¡£èµ„æ–™": {
                "files": [],
                "patterns": [
                    "docs/**/*.md",
                    "DEPLOYMENT*.md",
                    "test-*.md"
                ],
                "icon": "ğŸ“‹"
            },
            "ğŸ“ ä¸Šä¼ æ–‡ä»¶": {
                "files": [],
                "patterns": ["Uploads/**/*.md"],
                "icon": "ğŸ“"
            },
            "ğŸ—„ï¸ å¤‡ä»½æ–‡ä»¶": {
                "files": [],
                "patterns": [
                    "resource.backup/**/*.md",
                    "resources.backup/**/*.md",
                    "*.backup/**/*.md"
                ],
                "icon": "ğŸ—„ï¸"
            }
        }
        
        # æ”¶é›†æ‰€æœ‰æ–‡ä»¶
        all_files = []
        for pattern in ['**/*.md', '**/*.markdown']:
            for file_path in base_dir.glob(pattern):
                rel_path = file_path.relative_to(base_dir)
                all_files.append(str(rel_path))
        
        # å°†æ–‡ä»¶åˆ†ç±»
        categorized_files = set()
        
        for category_name, category_info in categories.items():
            for pattern in category_info["patterns"]:
                for file_path in base_dir.glob(pattern):
                    if file_path.is_file():
                        rel_path = str(file_path.relative_to(base_dir))
                        if rel_path in all_files:
                            category_info["files"].append(rel_path)
                            categorized_files.add(rel_path)
        
        # æœªåˆ†ç±»çš„æ–‡ä»¶
        uncategorized = [f for f in all_files if f not in categorized_files]
        if uncategorized:
            categories["â“ å…¶ä»–æ–‡ä»¶"] = {
                "files": sorted(uncategorized),
                "icon": "â“"
            }
        
        # æ¸…ç†ç©ºåˆ†ç±»å¹¶æ’åºæ–‡ä»¶
        result = {}
        for category_name, category_info in categories.items():
            if category_info["files"]:
                result[category_name] = {
                    "icon": category_info["icon"],
                    "files": sorted(category_info["files"])
                }
        
        self.send_response(200)
        self.send_header('Content-type', 'application/json; charset=utf-8')
        self.end_headers()
        self.wfile.write(json.dumps(result, ensure_ascii=False).encode('utf-8'))
    
    def read_file(self):
        """è¯»å–æ–‡ä»¶å†…å®¹"""
        file_path = urllib.parse.unquote(self.path[10:])  # Remove '/api/read/'
        full_path = Path('/root/cuhkstudy') / file_path
        
        try:
            with open(full_path, 'r', encoding='utf-8') as f:
                content = f.read()
            
            self.send_response(200)
            self.send_header('Content-type', 'text/plain; charset=utf-8')
            self.end_headers()
            self.wfile.write(content.encode('utf-8'))
        except Exception as e:
            self.send_error(500, str(e))
    
    def save_file(self):
        """ä¿å­˜æ–‡ä»¶"""
        file_path = urllib.parse.unquote(self.path[10:])  # Remove '/api/save/'
        full_path = Path('/root/cuhkstudy') / file_path
        
        try:
            content_length = int(self.headers['Content-Length'])
            content = self.rfile.read(content_length).decode('utf-8')
            
            # ç¡®ä¿ç›®å½•å­˜åœ¨
            full_path.parent.mkdir(parents=True, exist_ok=True)
            
            with open(full_path, 'w', encoding='utf-8') as f:
                f.write(content)
            
            self.send_response(200)
            self.send_header('Content-type', 'text/plain; charset=utf-8')
            self.end_headers()
            self.wfile.write('ä¿å­˜æˆåŠŸ'.encode('utf-8'))
        except Exception as e:
            self.send_error(500, str(e))

def start_editor(port=8080):

    def list_files(self):
        """åˆ—å‡ºmarkdownæ–‡ä»¶å¹¶æŒ‰åˆ†ç±»ç»„ç»‡"""
        base_dir = Path('/root/cuhkstudy')
        
        # å®šä¹‰æ–‡ä»¶åˆ†ç±»
        categories = {
            "ğŸ“– README ç¼–è¾‘": {
                "files": [],
                "patterns": ["README*.md", "*readme*.md"],
                "icon": "ğŸ“–"
            },
            "ğŸ  åŸºç¡€é¡µé¢ç¼–è¾‘": {
                "files": [],
                "patterns": [
